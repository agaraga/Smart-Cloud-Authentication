<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <filter>
   	<filter-name>AuthFilter</filter-name>
        <display-name>AuthFilter</display-name>
        <description>Authentication filter</description>
  	<filter-class>cloudapp.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
  		<filter-name>AuthFilter</filter-name>
  		<url-pattern>/userlist.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
  		<filter-name>AuthFilter</filter-name>
  		<servlet-name>TestServer</servlet-name>
    </filter-mapping>         
	<servlet>
		<servlet-name>RootCertServlet</servlet-name>
		<servlet-class>cloudapp.RootCertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RootCertServlet</servlet-name>
		<url-pattern>/rootcert</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserListServlet</servlet-name>
		<servlet-class>cloudapp.UserListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserListServlet</servlet-name>
		<url-pattern>/userlist</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserCertServlet</servlet-name>
		<servlet-class>cloudapp.UserCertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserCertServlet</servlet-name>
		<url-pattern>/usercert</url-pattern>
	</servlet-mapping>	
    <listener>
        <listener-class>cloudapp.ContextInitializer</listener-class>
    </listener>	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
